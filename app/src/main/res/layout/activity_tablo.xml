<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back"
    android:layout_height="match_parent"
    tools:context="kg.obval.ov.Tablo">


    <Button
        android:id="@+id/proobmen"
        android:layout_width="117dp"
        android:layout_height="48dp"
        android:layout_marginRight="16dp"
        android:text="Произвести \nобмен"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/linearLayout"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.495"
        tools:layout_editor_absoluteY="0dp">

    </LinearLayout>


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="183dp"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:columnCount="3"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/valutaText"
            android:layout_width="100dp"
            android:layout_height="@dimen/height"
            android:text="Валюта"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/pokupkaText"
            android:layout_width="100dp"
            android:layout_height="@dimen/height"
            android:text="Покупка"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/prodajaText"
            android:layout_width="100dp"
            android:layout_height="@dimen/height"
            android:text="Продажа"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/dollarText"
            android:layout_width="100dp"
            android:layout_height="@dimen/height"
            android:text="USD"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/dollarPokupkaText"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/dollarProdazhaText"
            android:layout_width="100dp"
            android:layout_height="@dimen/height"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/euroText"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="EUR"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/euroPokupkaText"
            android:layout_width="100dp"
            android:layout_height="@dimen/height"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/euroProdazhaText"
            android:layout_width="100dp"
            android:layout_height="@dimen/height"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/rublText"
            android:layout_width="100dp"
            android:layout_height="@dimen/height"
            android:text="RUB"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/rublPokupkaText"
            android:layout_width="100dp"
            android:layout_height="@dimen/height"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/rublProdajaText"
            android:layout_width="100dp"
            android:layout_height="@dimen/height"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tengeText"
            android:layout_width="100dp"
            android:layout_height="@dimen/height"
            android:text="KZT"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tengePokupkaText"
            android:layout_width="100dp"
            android:layout_height="@dimen/height"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tengeProdazhaText"
            android:layout_width="100dp"
            android:layout_height="@dimen/height"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black" />


    </GridLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="368dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        tools:layout_editor_absoluteX="8dp">

        <EditText
            android:id="@+id/kolsummaedit"
            android:layout_width="128dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="numberDecimal" />

        <Spinner
            android:id="@+id/spinnervalutado"
            android:layout_width="65dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/naView"
            android:layout_width="41dp"
            android:layout_height="40dp"
            android:text="на" />

        <Spinner
            android:id="@+id/spinnervalutaposle"
            android:layout_width="65dp"
            android:layout_height="40dp"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/gridLayout2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_editor_absoluteX="8dp">


        <Spinner
            android:id="@+id/kupitprodat"
            android:layout_width="95dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/resultatView"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Формула:"
             />

        <TextView
            android:id="@+id/summaView"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="Сумма"
            android:textSize="12sp" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
